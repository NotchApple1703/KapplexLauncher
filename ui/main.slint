import { SideBar } from "@ui/components/components.slint";
import { InstancesPage, ServersPage, AccountsPage, SettingsPage } from "@ui/pages/pages.slint";
import { YAxisSwipe } from "@ui/transitions/transitions.slint";

import { IndicatorPosition } from "@ui/enums.slint";
import { Style } from "@ui/globals.slint";

import "@ui/fonts/ttf/JetBrainsMono-Bold.ttf";
import "@ui/fonts/ttf/JetBrainsMono-BoldItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-ExtraBold.ttf";
import "@ui/fonts/ttf/JetBrainsMono-ExtraBoldItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-ExtraLight.ttf";
import "@ui/fonts/ttf/JetBrainsMono-ExtraLightItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-Italic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-Light.ttf";
import "@ui/fonts/ttf/JetBrainsMono-LightItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-Medium.ttf";
import "@ui/fonts/ttf/JetBrainsMono-MediumItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-Regular.ttf";
import "@ui/fonts/ttf/JetBrainsMono-SemiBold.ttf";
import "@ui/fonts/ttf/JetBrainsMono-SemiBoldItalic.ttf";
import "@ui/fonts/ttf/JetBrainsMono-Thin.ttf";
import "@ui/fonts/ttf/JetBrainsMono-ThinItalic.ttf";

export * from "@ui/globals.slint";

export component MainWindow inherits Window {
    in-out property <int> active-page: 0;

    title: "LK Launcher";
    min-height: 500px;
    max-height: 10000px;

    background: Style.palette.background;

    HorizontalLayout {
        // Main View
        Rectangle {
            min-width: 600px;
            background: Style.palette.background;

            YAxisSwipe {
                active-page: root.active-page;
                page-index: 0;
                InstancesPage {}
            }
            YAxisSwipe {
                active-page: root.active-page;
                page-index: 1;
                ServersPage {}
            }
            YAxisSwipe {
                active-page: root.active-page;
                page-index: 2;
                AccountsPage {}
            }
            YAxisSwipe {
                active-page: root.active-page;
                page-index: 3;
                SettingsPage {}
            }
        }

        SideBar {
            width: 220px;
            background: Style.palette.alternate-background;
            
            item-list: [
                "Instances",
                "Servers",
                "Accounts",
                "Settings",
            ];
            item-height: 60px;
            item-font-size: 22px;
            item-indicator-position: IndicatorPosition.LEFT;
            item-font-weight: 600;

            activate(index) => {
                root.active-page = index;
            }
        } 
    }
}